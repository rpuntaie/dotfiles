#!/usr/bin/env bash

# assume 
git config --global credential.helper '/home/roland/tmp/git_to_pass $@'
# - get action from git
while IFS= read -r line
do
  if [[ "$line" =~ host=.*github.com.* ]]; then
      echo "username=rpuntaie\n\
password=$(pass show https_github.com/rpuntaie)
      "
  #else ...
  fi
done
