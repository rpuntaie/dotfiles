defaults
auth            on
tls             on
tls_trust_file  /etc/ssl/certs/ca-bundle.crt
logfile         ~/.local/var/log/msmtp.log

# EPFL
account         epfl
host            mail.epfl.ch
port            465
from            timothee.floure@epfl.ch
tls_starttls    off
user            floure
passwordeval    "pass show epfl/tequila/floure | head -n 1"

# Fnux
account         fnux
host            lys.fnux.ch
port            465
from            timothee.floure@fnux.ch
tls_starttls    off
user            timothee.floure@fnux.ch
passwordeval    "pass show mail/timothee.floure@fnux.ch | head -n 1"

# Inilab
account         inilab
host            smtp.inilab.ch
port            465
from            timothee.floure@inilab.ch
tls_starttls    off
user            timothee.floure@inilab.ch
passwordeval    "pass show mail/timothee.floure@inilab.ch | head -n 1"

account default: fnux
