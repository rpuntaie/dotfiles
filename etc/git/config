[color]
  status = auto
  diff = auto
  branch = auto
  interactive = auto
[commit]
  gpgsign = false
  verbose = true
[core]
  editor = vim
  autocrlf = input
[diff]
  tool = vimdiff
[merge]
  tool = vimdiff
[pull]
  ff = only
[user]
