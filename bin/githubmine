mkdir -p ~/mine

_mine_one() {
    url="$1"
    name="$2"
    cd ~/mine
    if [ -d "$name" ]; then
        cd "$name"
        git pull
        git submodule update --init --recursive
    else
        git clone "$url$name"
    fi
    cd ~/mine
}

_mine_one https://github.com/getmail6/ getmail6
