#!/bin/bash
while inotifywait -e modify $1; do
ps cax | grep java > /dev/null
if [ $? -eq 0 ]; then
  killall java
  exec -a processing /usr/bin/processing4-java --sketch=$1 --force --output=/tmp/$1/ --run &
else
  exec -a processing /usr/bin/processing4-java --sketch=$1 --force --output=/tmp/$1/ --run &
fi
done


