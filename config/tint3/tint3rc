[[bar]]
  fontcolor #ffffff
  background #55000000
  borderwidth 0
  padding 5
  #margin 0;
#  manual-margin-left 320;
  location top
#  width 1280
  options debug
  left
    desktops
  center
    date
    spacerb
    time
  right
    loadavg
    spacera
    ip
    spacera
    gpu
    battery_usage
    batteryone
    batterytwo

[loadavg]
  id shell
  source  cat /proc/loadavg 

[ip]
  id shell
  source ~/.config/tint3/scripts/network.rb

[active]
  id active
  source window_title

[desktops]
  id workspace
  format %N
  active:background #28545c

#split time and date, looks better on a dual monitor system
[time]
  id clock
  timeout 5
  format %H:%M

[date]
  id clock
  format %a %d

[spacera]
  id text
  source //

[spacerb]
  id text
  source -

#########
# Power #
#########
[gpu]
  id shell
  source ~/.config/tint3/scripts/gpu.rb

[battery_usage]
  id shell
  source ~/.config/tint3/scripts/power.sh

[batteryone]
  id scale
  source battery BAT1
  high_font #00FF00
  med_font #FF0000
  low_font #222222
  low_color #FF0000

[batterytwo]
  id scale
  source battery BAT0
  high_font #00FF00
  med_font #FF0000
  low_font #222222
  low_color #FF0000
