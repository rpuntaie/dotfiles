pip install --user bottle #web framework
pip install --user cookiecutter #template projects
pip install --user pymunk #2D physics engine
pip install --user python-gantt
pip install --user plotly #charting with html/js
pip install --user flask #micro web framework
pip install --user nikola #static html generator
