#!/usr/bin/env bash

#yay
sudo rm -rf ~/.local/var/cache/yay
cd ~/tmp
rm -rf yay
git clone https://aur.archlinux.org/yay.git
cd yay
makepkg -si

yaysno(){
yay -S --noconfirm $1
}

#python 
yaysno erfa
yaysno python-pyerfa #fails
yaysno python-astropy
