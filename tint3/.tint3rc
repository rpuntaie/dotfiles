[[bar]]
  fontcolor #ffffff
  fontname Sakamoto
  background #55000000
  borderwidth 0
  padding 5
  margin 0;
  options debug
  left
    desktops
  center
    date
    spacerb
    time
  right
    system
    spacera
    network
    spacera
    power
    batteryone
    batterytwo

[loadavg]
  id shell
  source  cat /proc/loadavg

[active]
  id active
  source window_title

[desktops]
  id workspace
  format %N
  active:background #28545c

#split time and date, looks better on a dual monitor system
[time]
  id clock
  timeout 5
  format %H:%M

[date]
  id clock
  format %a %d

[spacera]
  id text
  source //

[spacerb]
  id text
  source -

[system]
  id shell
  source ${XDG_DATA_HOME}/tint3/system.rb

[network]
  id shell
  source ${XDG_DATA_HOME}/tint3/network.rb

[power]
  id shell
  source ${XDG_DATA_HOME}/tint3/power.rb

[batteryone]
  id scale
  source battery BAT1
  high_font #00FF00
  med_font #FF0000
  low_font #222222
  low_color #FF0000

[batterytwo]
  id scale
  source battery BAT0
  high_font #00FF00
  med_font #FF0000
  low_font #222222
  low_color #FF0000
