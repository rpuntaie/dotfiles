#!/usr/bin/env bash

#yay
sudo rm -rf ~/.local/var/cache/yay
cd ~/tmp
rm -rf yay-git
git clone https://aur.archlinux.org/yay-git.git
cd yay-git
makepkg -si

yaysno(){
yay -S --noconfirm $1
}

