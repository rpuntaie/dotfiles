#
# bspwm hotkeys
#


# Quit  BSPWM
super + alt + Escape
    bspc quit

# Close the selected window
super + c
    bspc window -c

# Kill the selected window
super + x
    bspc window -k

# cool stuff
super + t
    bspc desktop -l next

# Adjust the split ratios of the tree of the selected desktop so that all windows occupy the same area.
super + b
    bspc desktop -B

# Set or toggle the given state for the selected window to floating
super + s
    bspc window -t floating

# Set or toggle the given state for the selected window to fullscreen
super + f
    bspc window -t fullscreen
# Send the selected window to the biggest place
super + m
    bspc window -s biggest

# 
super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,pight}
# 
super + Tab
    bspc window -f {next,prev}

#super + {comma,period}
#    bspc desktop -C {backward,forward}

super + bracket{left,right}
    bspc desktop -f {prev,next}

super + {Left,Down,Up,Right}
    bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
    bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
    bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
    bspc window -r 0.{1-9}
    
# send the windows 
super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

# *move*move*
~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u

super + n
    bspc desktop -F vertical

super + m
    bspc desktop -F horizontal

#
# wm independent hotkeys 
#

super + Return
    termite

super + Home
    lock

super + d
    dmenu_run

# make sxhkd reload its configuration files:

super + Escape
    pkill -USR1 -x sxhkd

# Media Keys (on F-stuff)
XF86AudioLowerVolume
    pactl set-sink-volume 1 -10%

XF86AudioRaiseVolume
    pactl set-sink-volume 1 +10%

XF86AudioMute
    pactl set-sink-mute 1 toggle

XF86MonBrightnessDown
    xbacklight -dec 10    

XF86MonBrightnessUp
    xbacklight -inc 10

