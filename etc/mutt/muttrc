set realname = "$NAME"

# override defaults
set assumed_charset = "utf-8"
set send_charset = "utf-8"
set charset = "utf-8"
set imap_check_subscribed = yes
set ssl_force_tls = yes
set mbox_type = Maildir

# Cache
set header_cache = "$XDG_CACHE_HOME"/mutt/
set message_cachedir = "$XDG_CACHE_HOME"/mutt/messages/
set tmpdir = "$XDG_CACHE_HOME"/mutt/tmp

# Alias and Viewers
source $MAILDIR/aliases
set alias_file = "$MAILDIR"/aliases
set mailcap_path = "$XDG_CONFIG_HOME"/mutt/mailcap

#Notification
#set new_mail_command="notify-send 'New Email' '%n new messages, %u unread.' &"

# Use GPG2 instead of gpg + PGP configuration
source $XDG_CONFIG_HOME/mutt/pgp.muttrc
set pgp_use_gpg_agent = yes
set pgp_sign_as = $MYGPG
set pgp_timeout = 3600
set crypt_autosign = no
set crypt_replyencrypt = yes

# accounts
source $XDG_CONFIG_HOME/mutt/accounts.muttrc

# view control
source $XDG_CONFIG_HOME/mutt/view-control.muttrc
#source $XDG_CONFIG_HOME/mutt/vim-keys.muttrc

# color
source $XDG_CONFIG_HOME/mutt/color/neonwolf-256.muttrc
uncolor index "~N ~u"
uncolor index "~N !~u"
color index      brightcyan    default "~N ~u"  # new mailing list
color index      brightyellow  default "~N !~u" # new non-mailing list
#source $XDG_CONFIG_HOME/mutt/color/ML.muttrc



