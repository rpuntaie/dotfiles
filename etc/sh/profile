# Login shell configuration (sourced BEFORE interactive configuration)

if [ -d "$XDG_CONFIG_HOME/sh/profile.d" ]; then
	for profile in "$XDG_CONFIG_HOME/sh/profile.d/"*.sh; do
		if [ -r "$profile" ]; then
			source "$profile"
		fi
	done
	unset profile
fi

[ -e "$HOME/.cargo/env" ] && . "$HOME/.cargo/env"
