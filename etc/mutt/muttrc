#------------------------------------------------------------------------------
# General

set my_pass_gmail = `pass gmail/roland.puntaier@gmail.com`
set my_pass_chello = `pass magenta.at/roland.puntaier@chello.at`
set my_accounts = "$XDG_CONFIG_HOME"/mutt/accounts

# Cache
set header_cache = "$XDG_CACHE_HOME"/mutt/
set message_cachedir = "$XDG_CACHE_HOME"/mutt/messages/
set tmpdir = "$XDG_CACHE_HOME"/mutt/tmp

# Alias and Viewers
source $MAILDIR/aliases
set alias_file = "$MAILDIR"/aliases
set mailcap_path = "$XDG_CONFIG_HOME"/mutt/mailcap

#Notification
set new_mail_command="notify-send 'New Email' '%n new messages, %u unread.' &"

# Use GPG2 instead of gpg + PGP configuration
source $XDG_CONFIG_HOME/mutt/pgp.muttrc
set pgp_use_gpg_agent = yes
set pgp_sign_as = $MYGPG
set pgp_timeout = 3600
set crypt_autosign = no
set crypt_replyencrypt = yes

# view control
#source $XDG_CONFIG_HOME/mutt/view-control.muttrc

# color
#source $XDG_CONFIG_HOME/mutt/color/mutt-colors-neonwolf-256.muttrc
source $XDG_CONFIG_HOME/mutt/color/ML.muttrc

# accounts
# source $XDG_CONFIG_HOME/mutt/accounts/gmail.muttrc
# folder-hook gmail/* "source $XDG_CONFIG_HOME/mutt/accounts/gmail.muttrc"

account-hook . 'unset imap_user imap_pass'
account-hook roland.puntaier@imap.gmail.com 'set imap_user="roland.puntaier@gmail.com" imap_pass=$my_pass_gmail'
account-hook roland.puntaier@imap.gmail.at 'set imap_user="roland.puntaier@chello.at" imap_pass=$my_pass_chello'

folder-hook roland.puntaier@imap.gmail.com 'source $my_accounts/gmail.muttrc'
folder-hook roland.puntaier@imap.chello.at 'source $my_accounts/chello.muttrc'

