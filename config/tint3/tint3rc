[[bar]]
  fontcolor #ffffff
  fontname Sakamoto
  background #55000000
  borderwidth 0
  padding 5
  #margin 0;
#  manual-margin-left 1600;
  #manual-margin-top 180
  #width 1600
  #width 1440
  #width 2560
 # width 1680
  #location top
  options debug
  left
    desktops
  center
    date
    spacerb
    time
  right
    system
    spacera
    network
    spacera
    power
    batteryone
    batterytwo

[loadavg]
  id shell
  source  cat /proc/loadavg

[ip]
  id shell
  source ~/.config/tint3/scripts/network.rb

[active]
  id active
  source window_title

[desktops]
  id workspace
  format %N
  active:background #28545c

#split time and date, looks better on a dual monitor system
[time]
  id clock
  timeout 5
  format %H:%M

[date]
  id clock
  format %a %d

[spacera]
  id text
  source //

[spacerb]
  id text
  source -

[battery_usage]
  id shell
  source ~/.config/tint3/scripts/power.sh

[system]
  id shell
  source ~/.config/tint3/scripts/system.rb

[network]
  id shell
  source ~/.config/tint3/scripts/network.rb

[power]
  id shell
  source ~/.config/tint3/scripts/power.rb

[batteryone]
  id scale
  source battery BAT1
  high_font #00FF00
  med_font #FF0000
  low_font #222222
  low_color #FF0000

[batterytwo]
  id scale
  source battery BAT0
  high_font #00FF00
  med_font #FF0000
  low_font #222222
  low_color #FF0000
